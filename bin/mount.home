#!/bin/sh

/bin/cat << @EOF | sudo /bin/bash -

#echo "\$(pwd) SUDO_USER=\$SUDO_USER"

mount .home || exit 1

#for x in workspace Downloads Music Movies Pictures Documents
for x in workspace ; do
    if [ -d ".home/\$x" ]; then
        echo ".home/\$x \$x"
        [ -d "\$x" ] || sudo -u \$SUDO_USER -- mkdir \$x
        mount -o bind .home/\$x \$x
    fi
done

@EOF

