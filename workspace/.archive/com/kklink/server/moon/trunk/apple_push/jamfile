project
    : requirements
        <cxxflags>-std=c++0x
        # <cflags>-std=c++11 # <cflags>-pg <linkflags>-pg
    ;

lib ssl : : <link>shared ;

obj my-err : ../myerror.cpp ;
obj jss-obj : ../jss.cpp ;
obj log-obj : ../log.cpp ;
obj util.o : ../util.cpp ;

exe apple_push
    : main.cpp jss-obj log-obj my-err util.o
        ssl
        ../libjson/libjson.a
        /boost//system
        /boost//regex
    : <link>static # <cflags>"-g"
    ;

install $(TOP)/usr/local/bin : apple_push ;

