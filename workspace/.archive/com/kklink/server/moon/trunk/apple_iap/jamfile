import os ;

local HOME = [ os.environ HOME ] ;
local BOOST = $(HOME)/boost ;

project
    : requirements
        <cxxflags>-std=c++0x
        # <cflags>-std=c++11 # <cflags>-pg <linkflags>-pg
    ;

lib ssl ;

obj my-err : ../myerror.cpp ;
obj jss-obj : ../jss.cpp ;
obj log-obj : ../log.cpp ;
obj util.o : ../util.cpp ;
alias boost-static : /boost//system /boost//regex : <link>static ;

exe apple_iap
    : main.cpp jss-obj log-obj my-err util.o
        $(TOP)/libjson//libjson.a
        boost-static
        ssl
    #: <cflags>"-g"
    ;

install $(TOP)/usr/local/bin : apple_iap ;

