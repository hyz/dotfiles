
project thirdparty
    : requirements <link>static
    : usage-requirements <include>.
    ;
path-constant MakeDir : hiredis ;

actions make-hiredis 
{ 
    /usr/bin/make -C $(MakeDir) static
    /bin/ln -v -fs $(MakeDir)/libhiredis.a $(<)
} 

make libhiredis.a : hiredis/Makefile : @make-hiredis ; 
alias client : libhiredis.a : <link>static : : <include>. ;

