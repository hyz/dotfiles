project
    : requirements <threading>multi
        <include>..
        <include>$(BOOST_ROOT)
        <define>DEBUG
        # <cflags>-std=c++11 # <cflags>-pg <linkflags>-pg
    ;

obj mycurl.o : mycurl.cpp ;

exe yxim-virtual-proxy : main.cpp mycurl.o im_proxy.cpp ..//our ;

exe yxim-chat-proxy : main.cpp mycurl.o im_proxy.cpp ..//our ;

exe virtual-autoreply
    : autoreply_main.cpp
        ..//our /boost//locale /boost//serialization
    : <link>static
    ;

exe virtual-genchatmessage
    : genchatmessage_main.cpp
        ..//our /boost//locale /boost//serialization
    : <link>static
    ;

install usr/local/bin : virtual-autoreply virtual-genchatmessage ;
install bin : virtual-autoreply virtual-genchatmessage ;

