
path-constant BOOST_ROOT : /opt/wood/boost ;

use-project /boost : $(BOOST_ROOT) ;

project
    : requirements
        <include>$(BOOST_ROOT)
        <threading>multi
        <link>static
    : default-build release
    ;
#lib rt : librt-empty.c : <link>static ;

exe multi : multi_index-employee.cpp  ;
exe hcli : async_http_client.cpp /boost//system ;
exe chats : chat_server.cpp /boost//system ;
exe chatc : chat_client.cpp /boost//system /boost//thread ;

install bin/a : multi hcli chats chatc ;


